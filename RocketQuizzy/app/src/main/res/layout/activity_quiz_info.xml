<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_sky"
    android:transitionName="level_bg"
    android:id="@+id/content_view"
    android:orientation="vertical"
    tools:context=".view.QuizInfoActivity">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/image_btn_bg"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_close"
        android:layout_marginStart="20dp"
        app:tint="@color/themeColor" />

    <ImageView
        android:id="@+id/iv_level"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/level1"
        android:transitionName="iv_level" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_level"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/muli"
        android:text="level 2"
        android:layout_marginTop="10dp"
        android:textColor="@color/grey"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_level_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_level"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/alegreya_bold"
        android:text="Continuing"
        android:textColor="@color/themeColor"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/magic_play_desc"
        android:fontFamily="@font/muli"
        android:textColor="@color/themeColor"
        android:layout_marginStart="20dp"
        android:id="@+id/tv2"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/tv_level_title"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv2">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:id="@+id/start_btn_layout"
            app:cardElevation="10dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="15dp"
            android:layout_marginEnd="20dp">
            <Button
                android:id="@+id/start_btn"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:fontFamily="@font/muli_extrabold"
                android:text="@string/game"
                android:textAllCaps="false"
                android:textColor="@color/themeColor"
                android:textSize="22sp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>




</LinearLayout>
</layout>